      </ul>

      <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
          <li class="active"><a href="#">Browse Products</a></li>
          <li class="has-dropdown">
            <a href="#">Awesome Firehosers</a>
            <ul class="dropdown">
              <li class="active"><a href="#">Ken</a></li>
              <li><a href="#">Marco</a></li>
            </ul>
          </li>
          <li class="has-dropdown">
            <a href="#">Lightning Talk Lineup</a>
            <ul class="dropdown">
              <li class="active"><a href="#">Myo</a></li>
              <li><a href="#">Colin</a></li>
              <li><a href="#">Chris McIntyr</a></li>
              <li><a href="#">Chris Salvilin</a></li>
              <li><a href="#">Mikaila</a></li>
              <li><a href="#">Eric</a></li>
